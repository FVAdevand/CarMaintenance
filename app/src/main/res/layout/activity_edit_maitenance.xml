<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditMaitenanceActivity">

    <EditText
        android:id="@+id/et_edit_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="volume"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/et_edit_price_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="price unit"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/et_edit_odometr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="odometr"
        android:inputType="number"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/btn_save_refueling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="save" />


</LinearLayout>