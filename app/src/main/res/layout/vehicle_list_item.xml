<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_vehicle_photo"
            android:layout_width="110dp"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/car_default_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/iv_vehicle_photo"
            android:layout_toStartOf="@id/iv_current_vehicle_star"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vehicle_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Deawoo" />

            <TextView
                android:id="@+id/tv_vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                tools:text="Sens" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_current_vehicle_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@android:drawable/star_off" />

    </RelativeLayout>

</android.support.v7.widget.CardView>